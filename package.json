{
  "name": "tribal-gnosis",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "tribal-gnosis-backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "npm run dev -w tribal-gnosis-backend",
    "build": "npm run clean && npm run build:backend && npm run build:frontend",
    "build:frontend": "tsc --noEmit && vite build",
    "build:backend": "npm run build -w tribal-gnosis-backend",
    "build:prod": "npm ci --omit=dev && npm run build",
    "clean": "rimraf dist tribal-gnosis-backend/dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cypress": "^0.1.6",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cypress": "^15.3.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^0.34.6"
  }
}
