{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": ["node_modules"]
}
